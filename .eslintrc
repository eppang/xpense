{
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"env": {
		"node": true,
		"es6": true
	},
	"rules": {
		// 0: off, 1: warn, 2: error
		// the rules below should be sorted in a same way they are sorted on http://eslint.org/docs/rules page
		// http://eslint.org/docs/rules/#possible-errors
		"for-direction": 2,
		"getter-return": [2, {"allowImplicit": false}],
		"no-compare-neg-zero": 2,
		"no-cond-assign": 1,
		"no-constant-condition": ["error", {"checkLoops": false}],
		"no-control-regex": 2,
		"no-dupe-keys": 1,
		"no-duplicate-case": 1,
		"no-empty": [1, {"allowEmptyCatch": true}],
		"no-empty-character-class": 1,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 2,
		"no-extra-parens": [2, "all"],
		"no-extra-semi": 2,
		"no-func-assign": 2,
		// ADD DEFAULT OPTIONS MARKER
		"no-invalid-regexp": 2,
		"no-regex-spaces": 1,
		"no-unreachable": 1,
		"no-unsafe-negation": 1,
		"valid-typeof": 2,
		// http://eslint.org/docs/rules/#best-practices
		"curly": [2, "all"],
		"dot-notation": 2,
		"guard-for-in": 1,
		"no-alert": 1,
		"no-caller": 2,
		"no-case-declarations": 1,
		"no-empty-pattern": 1,
		"no-eval": 2,
		"no-fallthrough": [2, {"commentPattern": "no break"}],
		"no-implied-eval": 2,
		"no-invalid-this": 1,
		"no-iterator": 2,
		"no-loop-func": 1,
		"no-multi-spaces": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-proto": 2,
		"no-redeclare": 1,
		"no-script-url": 2,
		"no-throw-literal": 1,
		"no-useless-concat": 2,
		"no-useless-escape": 2,
		"no-useless-return": 2,
		"prefer-promise-reject-errors": 1,
		"wrap-iife": [2, "inside"],
		// http://eslint.org/docs/rules/#strict-mode
		"strict": 2,
		// http://eslint.org/docs/rules/#variables
		"no-delete-var": 2,
		"no-shadow": [1, {"allow": ["error"]}],
		"no-shadow-restricted-names": 2,
		"no-undef": 1,
		"no-unused-vars": [1, {"vars": "all", "args": "none"}],
		"no-use-before-define": 0,
		// http://eslint.org/docs/rules/#nodejs-and-commonjs
		"no-new-require": 2,
		// http://eslint.org/docs/rules/#stylistic-issues
		"array-bracket-newline": 2,
		"array-bracket-spacing": 2,
		"block-spacing": 2,
		"brace-style": [2, "1tbs", {"allowSingleLine": false}],
		"camelcase": 1,
		"comma-dangle": [2, "only-multiline"],
		"comma-spacing": 2,
		"comma-style": [2, "last"],
		"computed-property-spacing": 2,
		"eol-last": 2,
		"func-call-spacing": 2,
		"indent": [2, "tab", {"SwitchCase": 1}],
		"key-spacing": [2, {"beforeColon": false, "afterColon": true}],
		"keyword-spacing": [2, {"before": true, "after": true}],
		"new-cap": 1,
		"new-parens": 2,
		"no-bitwise": 1,
		"no-lonely-if": 2,
		"no-mixed-spaces-and-tabs": 1,
		"no-multiple-empty-lines": [1, {"max": 1, "maxEOF": 1, "maxBOF": 0}],
		"no-new-object": 2,
		"no-trailing-spaces": [2, {"skipBlankLines": true}],
		"object-curly-newline": [1, {"consistent": true}],
		"object-curly-spacing": 1,
		"quotes": [1, "single"],
		"semi": 2,
		"semi-spacing": 2,
		"space-before-blocks": 2,
		"space-before-function-paren": ["error", {"anonymous": "always","named": "never","asyncArrow": "always"}],
		"space-in-parens": 2,
		"spaced-comment": 2,
		"switch-colon-spacing": 2,
		// https://eslint.org/docs/rules/#ecmascript-6
		"arrow-body-style": 1,
		"arrow-parens": 2,
		"arrow-spacing": 2,
		"constructor-super": 2,
		"no-const-assign": 2,
		"no-this-before-super": 2,
		"no-var": 2,
		"prefer-arrow-callback": 1,
		"prefer-template": 1
	}
}